<div class="modal fade" id="referral_type_modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Referral Status</h5>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
			</div>
			<div class="modal-body">
                <input type="hidden" class="form-control" id="referral_type_id" data-field="id">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="referral_type_category" class="required fw-semibold fs-6 mt-3">Category:</label>
                            <select  class="form-control select2 custom-select" id="referral_type_category" data-field="category">
