
<style>
	.select2{
        width: 100%!important;
    }
	.dropzone .dz-preview .dz-image{
		min-width: 300px !important;
	}
</style>
<div class="card">
	<div class="card-header">
		<h1 class="my-10">Laboratory</h1>
	</div>
	<div class="card-header border-0 pt-6">
	  <div class="card-title">
		<!--begin::Search-->
		<div class="d-flex align-items-center position-relative my-1">
		  <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
			<span class="path1"></span>
			<span class="path2"></span>
		  </i>
		  <input id="table-search-input"  type="text" data-kt-user-table-filter="search"  class="form-control form-control-solid w-250px ps-13"  placeholder="Search Laboratory" />
		</div>
		<!--end::Search-->
	  </div>
	  <div class="card-toolbar">
		<a class="btn btn-primary" id="lab-add-btn" ><i class="fa fa-plus">&nbsp;</i>Add New Lab</a>
	  </div>
	</div>
	<div class="card-body py-4">
	  <input type="hidden" id="chosen-lab" />
  
	  <table class="table table-striped table-bordered text-nowrap w-100"  id="lab-table" >
		<thead>
		  <tr>
			<th>LOINC</th>
			<th>Display</th>
			<th>Description</th>
			<th>Unit</th>
			<th>Specimen Type</th>
			<th class="text-center">Actions</th>
		  </tr>
		</thead>
		<tbody></tbody>
	  </table>
	</div>
</div>

<div class="modal fade" id="lab-edit-modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" >Laboratory</h5>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
					<i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
				</div>
			</div>
			<div class="modal-body">
                <input type="hidden" id="lab-modal-type"></input>
                <div class="row">
					<div class="col-md-4 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-loinc" class="fw-semibold fs-6 mb-2">LOINC:</label>
                            <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-loinc">
                        </div>
                    </div>
                    <div class="col-md-8 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-display" class="fw-semibold fs-6 mb-2">Display:</label>
                            <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-display">
                        </div>
                    </div>
                    <div class="col-md-12 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-description" class="fw-semibold fs-6 mb-2">Description:</label>
                            <textarea class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Leave a comment here" id="lab-modal-description" style="height: 120px"></textarea>
                        </div>
                    </div>
					<div class="col-md-6 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-snomed" class="fw-semibold fs-6 mb-2">Snomed ID:</label>
                            <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-snomed">
                        </div>
                    </div>
                    <div class="col-md-6 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-lab-type" class="fw-semibold fs-6 mb-2">Type:</label>
                            <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-type">
                        </div>
                    </div>
					<div class="col-md-3 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-min" class="fw-semibold fs-6 mb-2">Normal Range Min:</label>
                            <input type="number" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-min">
                        </div>
                    </div>
                    <div class="col-md-3 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-max" class="fw-semibold fs-6 mb-2">Normal Range Max:</label>
                            <input type="number" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-max">
                        </div>
                    </div>
					<div class="col-md-6 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-clia" class="fw-semibold fs-6 mb-2">CLIA:</label>
                            <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-clia">
                        </div>
                    </div>
                    <div class="col-md-4 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-unit" class="fw-semibold fs-6 mb-2">Unit:</label>
                            <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="lab-modal-unit">
                        </div>
                    </div>
                    <div class="col-md-8 fv-row mb-7">
                        <div class="form-group">
                            <label for="lab-modal-specimen" class="fw-semibold fs-6 mb-2">Specimen Type:</label>
                            <select id="lab-modal-specimen" data-control="select2" data-dropdown-parent="#lab-edit-modal" class="form-select mb-2"></select>
                        </div>
                    </div>
                </div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
				<button type="button" class="btn btn-primary" id="lab-modal-save"><i class="fa fa-save">&nbsp;</i> Save</button>
			  </div>
		</div>
	</div>
</div>
