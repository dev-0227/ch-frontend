<!-- ROW OPEN -->
<style>
    #qrcode img{
        margin:50px auto;
    }
    #wave {
        position: relative;
        height: 70px;
        width: 100%;
        background: #45aaf2;
        transition: 0.5s;
    }
    #wave:before {
        content: "";
        display: block;
        position: absolute;
        border-radius: 100% 50%;
        width: 52%;
        height: 80px;
        background-color: #fff;
        right: 0px;
        top: 40px;
    }
    #wave:after {
        content: "";
        display: block;
        position: absolute;
        border-radius: 100% 50%;
        width: 56%;
        height: 70px;
        background-color: #45aaf2;
        left: 0;
        top: 24px;
        transition: 0.5s;
    }
    .azure::after{
        background-color: #45aaf2;
    }
    .indigo::after{
        background-color: #6574cd!important;
    }
    .purple::after{
        background-color: #8927ec!important;
    }
    .pink::after{
        background-color: #fc5296!important;
    }
    .red::after{
        background-color: #e73827!important;
    }
    .orange::after{
        background-color: #fc7303!important;
    }
    .yellow::after{
        background-color: #FBB034!important;
    }
    .lime::after{
        background-color: #7bd235!important;
    }
    .green::after{
        background-color: #4ecc48!important;
    }
    .teal::after{
        background-color: #1caf9f!important;
    }
    .postheader{
        background-color: #45aaf2;
        transition: 0.5s;
    }
    #post-main{
        border:5px solid #45aaf2;
        width:100%;
        margin:0 auto;
        background-color: #fff;
        border-radius: 6px;
        transition: 0.5s;
    }
</style>
