<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Communication Settings</h3>
            </div>
            <div class="card-body p-6">
                <div class="panel panel-primary">
                    <div class=" tab-menu-heading">
                        <div class="tabs-menu1">
                            <!-- Tabs -->
                            <ul class="nav panel-tabs">
                                <li class="superadmin-right"><a href="#phonesetting_tab" class="active" data-toggle="tab">Phone Number Settings</a></li>
                                <li><a href="#hedisalert_tab" class="active tmpfirstclass" data-toggle="tab">Hedis Alerts</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body tabs-menu-body tab_area">
                        <div class="tab-content">
                            <div class="tab-pane superadmin-right active" id="phonesetting_tab">
                                <div class="row">
                                    <div class="col-md-3 col-lg-3">
                                        <div class="form-group">
                                            <div class="form-label">Activate SMS</div>
                                            <label class="custom-switch">
                                                <input type="checkbox" id="activatecheck" class="custom-switch-input">
                                                <span class="custom-switch-indicator"></span>
                                                <span class="custom-switch-description">Activate SMS</span>
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-label">Activate Replenish When 150</div>
                                            <label class="custom-switch">
                                                <input type="checkbox" id="autopaycheck" class="custom-switch-input">
                                                <span class="custom-switch-indicator"></span>
                                                <span class="custom-switch-description">I agree with replenishing</span>
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Replenish Amount</label>
                                            <div class="row gutters-xs">
                                                <div class="col">
                                                    <input type="text" class="form-control" placeholder="" id="repamount">
                                                </div>
                                                <span class="col-auto">
                                                    <button class="btn btn-primary" type="button" id="updaterepamountbtn">Update</button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Replenish Counts</label>
                                            <div class="row gutters-xs">
                                                <div class="col">
                                                    <input type="text" class="form-control" placeholder="" id="repcounts">
                                                </div>
                                                <span class="col-auto">
                                                    <button class="btn btn-primary" type="button" id="updaterepcountsbtn">Update</button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Price Per SMS</label>
                                            <div class="row gutters-xs">
                                                <div class="col">
                                                    <input type="text" class="form-control" placeholder="" id="pricevalue">
                                                </div>
                                                <span class="col-auto">
                                                    <button class="btn btn-primary" type="button" id="updatepricebtn">Update</button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Phone number  -----  Monthly Cost</label>
                                            <div class="row gutters-xs">
                                                <div class="col">
                                                    <input type="text" class="form-control" placeholder="" id="phonenumber">
                                                </div>
                                                <div class="col">
                                                    <input type="text" class="form-control" placeholder="" id="phoneprice">
                                                </div>
                                                <span class="col-auto">
                                                    <button class="btn btn-primary" type="button" id="updatephonebtn">Update</button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-9 col-lg-9">
                                        <div class="card">
                                            <div class="e-table pt-5 px-5 pb-5">
                                                <div class="table-responsive table-lg pt-2">
                                                    <table class="table table-striped table-bordered text-nowrap w-100" id="paymenthistorytable">
                                                        <thead>
                                                            <tr>
                                                                <th>Date</th>
                                                                <th>Reciept ID</th>
                                                                <th>Name</th>
                                                                <th>Email</th>
                                                                <th>Amount</th>
                                                                <th>Counts</th>
                                                                <th>Type</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
