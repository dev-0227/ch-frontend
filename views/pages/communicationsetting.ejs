                                <div class="row justify-content-center">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="hedis_alert_type" class="form-control-label">Alert Types:</label>
                                            <select class="form-control" id="hedis_alert_type">
                                                <option value="1">Letter</option>
                                                <option value="2">Email</option>
                                                <option value="3">SMS</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="hedis_alert_language" class="form-control-label">Language:</label>
                                            <select class="form-control" id="hedis_alert_language">
                                                
                                            </select>
                                        </div>
                                    </div>
                                </div>
                               <!-- ROW-2 OPEN -->
                                <div class="row">
                                    <div class="col-6">
                                        <h5  class="text-primary">Variable Definition</h5>
                                        <div class="tags">
                                            <div class="tag">
                                                PT Name
                                                <span class="tag-addon tag-info">$PT_NAME</span>
                                            </div>
                                            <div class="tag">
                                                PT First Name
                                                <span class="tag-addon tag-info">$FirstName</span>
                                            </div>
                                            <div class="tag">
                                                PT Last Name
                                                <span class="tag-addon tag-info">$LastName</span>
                                            </div>
                                            <div class="tag">
                                                PT Middle Name
                                                <span class="tag-addon tag-info">$MiddleInitial</span>
                                            </div>
                                            <div class="tag">
                                                PT DOB
                                                <span class="tag-addon tag-info">$DOB</span>
                                            </div>
                                            <div class="tag">
                                                PT Address
                                                <span class="tag-addon tag-info">$ADDRESS</span>
                                            </div>
                                        </div>
                                        <div class="tags mt-5">
                                            <div class="tag">
                                                Clinic Name
                                                <span class="tag-addon tag-success">$Clinic_name</span>
                                            </div>
                                            <div class="tag">
                                                Clinic Portal
                                                <span class="tag-addon tag-success">$portal</span>
                                            </div>
                                            <div class="tag">
                                                Clinic Tel
                                                <span class="tag-addon tag-success">$Clinic_tel</span>
                                            </div>
                                            <div class="tag">
                                                Clinic Web
                                                <span class="tag-addon tag-success">$Clinic_web</span>
                                            </div>
                                            <div class="tag">
                                                Clinic Ex
                                                <span class="tag-addon tag-success">$Clinic_ex</span>
                                            </div>
                                            <div class="tag">
                                                Contact Name
                                                <span class="tag-addon tag-success">$Contact_name</span>
                                            </div>
                                            <div class="tag">
                                                Contact Tel
                                                <span class="tag-addon tag-success">$Tel</span>
                                            </div>
                                        </div>
                                        <div class="tags mt-5">
                                            <div class="tag">
                                                Missing Service
                                                <span class="tag-addon tag-danger">$MissingService</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="hedis_alert_subject" class="form-control-label">Subject:</label>
                                            <input type="text" class="form-control" id="hedis_alert_subject" />
                                            <input type="hidden" class="form-control" id="hedis_alert_id" />
                                        </div>
                                        <div class="form-group">
                                            <label for="hedis_alert_body" class="form-control-label">Body:</label>
                                            <div id="hedis_alert_body"></div>
                                        </div>
                                        <div class="form-group">
                                            <button class="btn btn-primary" id = "hedisalertbtn">Submit</button>
