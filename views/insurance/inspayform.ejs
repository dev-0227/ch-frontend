<style>
    .tab-content i {
        color:#fff;
    }
    .table-responsive{
        padding:10px;
    }
</style>
<div class="row">
    <div class="col-xl-12">
        <div class="card">            
            <div class="card-body p-6">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header border-0 pt-6 px-6">
                                <div class="card-title">
                                    <h3 class="card-title">Payment Method</h3>                                                    
                                </div>
                                <div class="card-toolbar">
                                    <button id="addpaymethod" type="button" class="btn btn-md btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg" style="margin-right: 10px;"><i class="fa fa-plus mr-2"></i>Add Payment Method</button>
                                    <div class="d-flex align-items-center position-relative my-1">
                                        <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                                          <span class="path1"></span>
                                          <span class="path2"></span>
                                        </i>
                                        <input id="pay_method_search_input"  type="text" data-kt-user-table-filter="search"  class="form-control form-control-solid w-350px ps-13"  placeholder="Search Payment Method" />
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered text-nowrap w-100" id="pay_method_table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Id</th>                                                              
                                            <th scope="col">Display</th>                                                                
                                            <th scope="col">Description</th>                                                                
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>                                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payment Method Add Modal -->
<div class="modal fade" id="pay_method_add_modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="example-Modal3">Add Payment Method</h5>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
			</div>
			<div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="question" class="form-control-label">Display:</label>
                            <input type="text" class="form-control" id="add_pay_method_display" name="add_pay_method_display">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="question" class="form-control-label">Description:</label>
                            <textarea type="text" class="form-control" id="add_pay_method_description" name="add_pay_method_description"></textarea>
                        </div>
                    </div>
                </div>
			</div>
			<div class="modal-footer">
                <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
                <button type="button" class="btn btn-primary" id="save_pay_method"><i class="fa fa-save">&nbsp;</i> Done</button>
            </div>
		</div>
	</div>
</div>
<div class="modal fade" id="pay_method_edit_modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="example-Modal3">Edit Payment Method</h5>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
			</div>
			<div class="modal-body">
                <div class="row">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="hidden" id="edit_pay_method_id" name="edit_pay_method_id">
                            <div class="form-group">
                                <label for="question" class="form-control-label">Display:</label>
                                <input type="text" class="form-control" id="edit_pay_method_display" name="edit_pay_method_display">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="question" class="form-control-label">Description:</label>
                                <textarea type="text" class="form-control" id="edit_pay_method_description" name="edit_pay_method_description"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
			<div class="modal-footer">
                <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
                <button type="button" class="btn btn-primary" id="update_pay_method"><i class="fa fa-save">&nbsp;</i> Done</button>
            </div>
		</div>
	</div>
</div>

